<div
	class="contact-sec-1 space bg-repeat overflow-hidden background-image"
	style="background-image: url(&quot;assets/img/bg/jiji-bg2.png&quot;);">
	<div class="container">
		<div class="row align-items-center justify-content-between">
			<div class="col-xl-8 pe-xxl-5">
				<div class="title-area">
					<span class="sub-title style2"># S'inscrire</span>
					<h2 class="sec-title text-white">
						Signup <span class="text-theme">!</span>
					</h2>
				</div>
				<form action="signup" method="POST"
					class="contact-form pb-xl-0 space-bottom">
					<div class="row">
						<div class="form-group style-border2 col-md-6">
							<input required type="text" class="form-control" name="nickname"
								id="nickname" placeholder="Pseudonyme"> <i
								class="fa-solid fa-font"></i>
						</div>
						<div class="form-group style-border2 col-md-6">
							<input required type="email" class="form-control" name="email" id="email"
								placeholder="Email Address"> <i class="fal fa-envelope"></i>
						</div>

						<div class="form-group style-border2 col-md-6">
							<input required type="password" class="form-control" name="password"
								id="password" placeholder="Mot de passe"> <i
								class="fal fa-key"></i>
						</div>
						<div class="form-group style-border2 col-md-6">
							<input required type="password" class="form-control"
								name="password-confirm" id="password-confirm"
								placeholder="Confirmez le mot de passe"> <i
								class="fal fa-key"></i>
						</div>
					</div>
					<div class="row" style="text-align: center">
						<div class="form-btn col-12">
							<a href="login" class="th-btn style-border"> <span
								class="btn-border"> En fait j'ai déjà un compte ! <i
									class="fa-solid fa-user-plus"></i>
							</span>
							</a>
							<button class="th-btn">
								Signup <i class="fa fa-sign-in" aria-hidden="true"></i>
							</button>

						</div>
					</div>
					<p class="form-messages mb-0 mt-3"></p>
				</form>
			</div>
			<div class="col-xl-4 ps-xxl-5">
				<img
					src="https://static.wikia.nocookie.net/mario/images/d/d6/Another_artwork_of_Paper_Luigi.png"
					alt="mario" style="max-height: 280px">
			</div>
		</div>
	</div>
</div>